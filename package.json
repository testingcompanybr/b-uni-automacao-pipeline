{
  "name": "automacao-login-selenium-cucumber",
  "version": "1.0.0",
  "description": "Automação de testes de login com Selenium, Cucumber e TypeScript",
  "scripts": {
    "test": "cucumber-js --config cucumber.js",
    "test:allure": "npm run test && npm run report:allure:generate && npm run report:allure:open",
    "test:mobile": "npx cucumber-js --tags '@mobile' --config cucumber.js",
    "test:web": "npx cucumber-js --tags 'not @mobile' --config cucumber.js",
    "test:web:pipeline": "npx cucumber-js --tags \"@ibkLogin\" --config cucumber.js",
    "report:allure:generate:pipeline": "allure generate --single-file --clean allure-results",
    "test:custom": "npx cucumber-js --config cucumber.js",
    "report:allure:generate": "allure generate allure-results --clean -o allure-report",
    "report:allure:open": "npx allure open allure-report",
    "report:allure:clean": "rimraf allure-results allure-report"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@cucumber/messages": "^27.2.0",
    "@types/chai": "^4.3.5",
    "@types/node": "^20.17.50",
    "@types/selenium-webdriver": "^4.1.28",
    "@wdio/appium-service": "^9.14.0",
    "allure-cucumberjs": "^3.3.0",
    "allure-js-commons": "^3.3.0",
    "appium": "^2.18.0",
    "appium-uiautomator2-driver": "^4.2.3",
    "chai": "^4.3.7",
    "chromedriver": "^138.0.2",
    "selenium-webdriver": "^4.21.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "appium": "^2.0.0",
    "webdriverio": "^8.0.0"
  }
}
